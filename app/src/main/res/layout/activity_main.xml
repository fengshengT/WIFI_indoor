<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/btn_textview"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:text="采集与管理"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:drawableTop="@mipmap/main1_1"
        android:background="@drawable/txt_radiuborder"
        android:textSize="30sp"/>

        <Button
            android:id="@+id/btn_button"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:text="定位与显示"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginVertical="10dp"
            android:drawableTop="@mipmap/main1_2"
            android:background="@drawable/txt_radiuborder"
            android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_edittext"
            android:layout_width="235dp"
            android:layout_height="130dp"
            android:text="查看附近接入点"
            android:layout_gravity="left"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:drawableTop="@mipmap/main1_3"
            android:background="@drawable/txt_radiuborder"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btn_show_menu"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/main1_4"
            android:background="@drawable/txt_radiuborder"
            android:layout_marginLeft="10dp"
            android:text="设置" />
    </LinearLayout>
    </LinearLayout>



